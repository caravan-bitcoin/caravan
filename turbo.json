{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**"
      ]
    },
    "lint": {},
    "test": {
      "dependsOn": [
        "^build",
        "build"
      ]
    },
    "test:debug": {
      "cache": false
    },
    "test:watch": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "deploy": {
      "dependsOn": [
        "build",
        "test",
        "lint"
      ]
    },
    "preview": {
      "dependsOn": [
        "build"
      ]
    },
    "ci": {
      "dependsOn": [
        "^build"
      ]
    }
  }
}
