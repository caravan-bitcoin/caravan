{
  "name": "@caravan/bip32",
  "version": "1.0.0",
  "author": "unchained capital",
  "description": "Package for working with bip32 and derivative objects like extended public keys",
  "engines": {
    "node": ">=20"
  },
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/index.js",
    "./dist/index.cjs",
    "./dist/index.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "npm run build -- --watch",
    "lint": "eslint src/",
    "ci": "npm run lint && npm run test",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:debug": "node --inspect-brk ../../node_modules/.bin/vitest run"
  },
  "dependencies": {
    "@caravan/bitcoin": "*",
    "bip174": "^2.1.1",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "@caravan/eslint-config": "*",
    "@caravan/typescript-config": "*",
    "@inrupt/jest-jsdom-polyfills": "^3.2.1",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.14.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.1.3",
    "ts-node": "^10.9.2",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^3.1.1"
  }
}
