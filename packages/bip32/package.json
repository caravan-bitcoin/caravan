{
  "name": "@caravan/bip32",
  "version": "1.0.0",
  "author": "unchained capital",
  "description": "Package for working with bip32 and derivative objects like extended public keys",
  "engines": {
    "node": ">=20"
  },
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/index.js",
    "./dist/index.cjs",
    "./dist/index.d.ts"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "npm run build -- --watch",
    "lint": "eslint src/",
    "ci": "npm run lint && npm run test",
    "test": "vitest --watch=false src",
    "test:watch": "vitest --watch src",
    "test:debug": "node --inspect-brk vitest --runInBand"
  },
  "dependencies": {
    "@caravan/bitcoin": "*",
    "bip174": "^2.1.1",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "@caravan/eslint-config": "*",
    "@caravan/typescript-config": "*",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "24.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^1.3.1"
  }
}
