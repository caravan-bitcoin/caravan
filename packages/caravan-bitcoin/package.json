{
  "name": "@caravan/bitcoin",
  "version": "0.4.2",
  "description": "Unchained Capital's bitcoin utilities library.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "files": [
    "./dist/index.js",
    "./dist/index.mjs",
    "./dist/index.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/caravan-bitcoin/caravan/packages/caravan-bitcoin"
  },
  "author": "Unchained Capital",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/caravan-bitcoin/caravan/issues"
  },
  "homepage": "https://github.com/caravan-bitcoin/caravan/",
  "engines": {
    "node": ">=20"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.12.7",
    "@caravan/build-plugins": "*",
    "@caravan/eslint-config": "*",
    "@caravan/typescript-config": "*",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "bs58": "^4.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-prettier": "^5.1.3",
    "lint-staged": "^13.1.2",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "npm run build -- --watch",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "ci": "npm run lint && npm run test",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui --watch"
  },
  "bin": {},
  "dependencies": {
    "@babel/polyfill": "^7.7.0",
    "@babel/runtime": "^7.23.9",
    "bignumber.js": "^9.3.0",
    "bip32": "^2.0.5",
    "bip66": "^1.1.5",
    "bitcoin-address-validation": "^2.2.3",
    "bitcoinjs-lib-v5": "npm:bitcoinjs-lib@^5.1.10",
    "bs58check": "^2.1.2",
    "buffer": "^6.0.3",
    "bufio": "^1.2.0",
    "core-js": "^2.6.10"
  },
  "directories": {
    "lib": "lib"
  }
}
